#
Kanku::Util::IPTables:
  start_port: 49001


domain_name: ubuntu-current
default_job: kanku-job
login_user: root
login_pass: kankudai

jobs:
 kanku-job:
  -
    use_module: Kanku::Handler::SetJobContext
    options:
      host_interface: eth0
  -
    use_module: Kanku::Handler::OBSCheck
    options:
      api_url: https://api.opensuse.org/public
      project: devel:kanku:images
      package: ubuntu-noble
      repository: images_ubuntu
      arch: x86_64
  -
    use_module: Kanku::Handler::ImageDownload
  -
    use_module: Kanku::Handler::CreateDomain
    options:
      memory: 2G
      vcpu: 2
      use_9p: 1
  -
    use_module: Kanku::Handler::ExecuteCommandViaConsole
    options:
      commands:
        - echo "deb http://archive.ubuntu.com/ubuntu noble main universe" > /etc/apt/sources.list
        - apt-get update
        - apt-get install -y parted openssh-server
        - /tmp/kanku/resize.sh /dev/sda 1 apply
  -
    use_module: Kanku::Handler::PrepareSSH
  -
    use_module: Kanku::Handler::ExecuteCommandViaSSH
    options:
      commands:
        - apt-get install -y build-essential vim vim-common fakeroot dh-make less git-buildpackage
